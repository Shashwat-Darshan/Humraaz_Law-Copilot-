<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Complaints and Status</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      height: 100vh; /* 100 viewport height */
      width: 100%;
    }

    header {
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 1rem 0;
    }

    h1 {
      margin: 0;
    }

    main {
      padding: 2rem;
    }

    .complaints {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive columns */
      gap: 1rem;
    }

    .complaint {
      background-color: #ddd;
      padding: 1rem 20px;
      margin: 20px;
      text-align: center;
      border-radius: 5px;
    }

    .complaint-head h2 {
      background-color: #f0f0f0;
      color: #333;
      padding: 10px;
      border-bottom: 2px solid #ccc;
      font-size: 1.2rem; /* Adjust font size for responsiveness */
      font-weight: bold;
    }

    .complaints-head {
      color: #333;
      padding: 10px;
      border-bottom: 2px solid #ccc;
      margin-bottom: 20px;
    }

    .complaints-head h2 {
      margin: 0;
    }

    p {
      margin: 5px;
    }

    .one {
      display: flex;
      justify-content: space-around;
    }

    footer {
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 1rem 0;
      position: fixed;
      bottom: 0;
      width: 100%;
    }

    .status {
      display: flex;
      justify-content: space-between;
      margin-top: 1rem;
    }

    .status p {
      display: block;
      flex-direction: column;
      justify-content: space-between;
    }

    .three {
      background-color: #333;
      height: 10px;
    }

    /* Media Queries for Responsive Design */
    @media (max-width: 768px) {
      .complaints {
        grid-template-columns: repeat(1, 1fr); /* Single column for smaller screens */
      }
      .complaint {
        margin: 10px;
      }
    }
  </style>
</head>

<body>
  <center>
    <header>
      <h1>Complaints and Status</h1>
    </header>
  </center>
  <main>
    <div class="complaints">
      <% complaints.forEach((complaint, index) => { %>
      <article class="complaint">
        <div class="complaints-head">
          <h2>Complaint #<%= index + 1 %></h2>
          <h2><%= complaint.subject %></h2>
        </div>
        <div class="one">
          <div class="two">
            <p>Status: </p>
            <p><%= complaint.resolved ? 'Progressed' : 'In Progress' %></p>
          </div>
          <% if (complaint.resolved) { %>
          <div class="two">
            <p>Resolved : </p>
            <p><%= complaint.resolved %></p>
          </div>
          <% } else { %>
          <div class="two">
            <p>Assigned By: </p>
            <p><%= complaint.fullname %></p>
          </div>
          <% } %>
        </div>
        <div class="two">
          <p>Message Â :</h2>
          <p><%= complaint.message %> </p> </div>
      </article>
      <% }); %>
    </div>
  </main>

  <footer>
    </footer>
</body>

</html>
