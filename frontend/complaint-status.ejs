.complaints{
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 columns each taking 1 fraction of available space */
        grid-gap: 10px; /* Gap between grid items */
    }

    .complaint {
        background-color: #ddd;
        padding: 20px;
        text-align: center;
        height:135px;
        
        
    }
        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .status {
            display: flex;
            justify-content: space-between;
            margin-top: 1rem;
            
        }

        .status p {
            display: block;
            display: flex;
        flex-direction: column;
        justify-content: space-between;
        
        }

    </style>
</head>
<body>
    <header>
        <h1>Complaints and Status</h1>
    </header>
    <main>
        <section class="complaints">
            
            <% complaints.forEach((complaint, index) => { %>
                <article class="complaint">
                    <h2>Complaint #<%= index + 1 %>  - <%= complaint.subject %> </h2>
                    <div class="status">
                        
                        <div class="one"><p>Status: </p>
                        
                        
                        <p ><%= complaint.resolved ? 'Progressed' : 'In Progress' %></p>
                    </div>

                            <% if (complaint.resolved) { %>
                                <p>Resolved : </p>
                                <span>
                                    <p><%= complaint.resolved %></p>
                                </span>
                                
                                <% } else { %>
                                    <p>Assigned By: <%= complaint.fullname %></p>
                                    <% } %>
                                    <p>subject: <%= complaint.subject %></p>
                                </div>
                            </article>
            <% }); %>
            
        </center>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 All rights reserved</p>
    </footer>
</body>
</html>
